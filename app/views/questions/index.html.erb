<div class="container mt-sm">
  <h2 class="title-lg">
    <%= @questions.count %>
    <%= inclination(@questions.count, 'вопрос', 'вопроса', 'вопросов') %>
  </h2>
</div>

<% @questions.sort_by{ |questions| questions.created_at }.reverse.each do |question| %>
  <div class="mt-sm container">
    <%= render question %>
  </div>
<% end %>
